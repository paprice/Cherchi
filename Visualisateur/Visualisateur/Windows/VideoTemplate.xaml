<UserControl x:Class="Visualisateur.Windows.VideoTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Visualisateur.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="130">
    <Grid>
        <Image Name="thumbnail" HorizontalAlignment="Left" Height="100" Margin="2" VerticalAlignment="Top"/>
        <TextBlock x:Name="name" HorizontalAlignment="Left" Height="75" Margin="2,75,2,2" VerticalAlignment="Top" TextWrapping="Wrap" Text="TextBox" Width="125"/>
    </Grid>
</UserControl>
